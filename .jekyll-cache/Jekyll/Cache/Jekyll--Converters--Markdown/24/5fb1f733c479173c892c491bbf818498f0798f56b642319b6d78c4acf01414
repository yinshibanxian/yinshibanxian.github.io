<pre><code>const arr = [4,3,2,1];

function insertionSort(arr) {
    let temp;
    for(let i = 1;i &lt; arr.length;i ++) {
        let j = i;
        temp = arr[i];
        while(j &gt; 0 &amp;&amp; arr[j-1] &gt; temp) {
            arr[j] = arr[j-1];
            j --;
        }
        arr[j] = temp;
    }
}
insertionSort(arr);
console.log(arr); // [1,2,3,4]
</code></pre>

