<pre><code>/**
 * @param {number[]} nums
 * @return {number[]}
 */
var exchange = function(nums) {
    let left = 0, right = nums.length - 1;
    while(left &lt; right) {
        if((nums[left] % 2 === 0) &amp;&amp; nums[right] % 2 === 1) {
            [nums[left],nums[right]] = [nums[right],nums[left]];
            left ++;
            right --;
        }
        if(nums[left] % 2 === 1) {
            left ++;
        }
        if(nums[right] % 2 === 0) {
            right --;
        }
    }
    return nums;
};
</code></pre>

