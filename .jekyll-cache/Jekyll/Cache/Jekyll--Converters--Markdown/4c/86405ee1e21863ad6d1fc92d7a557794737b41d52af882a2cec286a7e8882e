<pre><code>function debounce(func,wait) {
        let timer;
        return function() {
            // è·å–thiså’Œå‚æ•°
            // 
            let context = this;
            let args = arguments;
            if(timer) clearTimeout(timer);
            timer = setTimeout(() =&gt; {
                func.apply(context,args);
            },wait)
        }
    }
</code></pre>

