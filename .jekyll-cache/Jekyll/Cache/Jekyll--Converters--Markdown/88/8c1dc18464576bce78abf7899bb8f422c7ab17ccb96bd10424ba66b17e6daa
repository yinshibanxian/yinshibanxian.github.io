I"[<p><a href="https://easyhpc.org/problems/program/362/">题目链接</a></p>
<pre><code class="language-c">#include &lt;stdio.h&gt;
#include &lt;pthread.h&gt;
#include &lt;semaphore.h&gt;
int n, *a, sum = 0;
sem_t sumMux;
void myMin()
{
	int ret = a[0];
	for (int i = 1; i &lt; n; ++i)
		ret = ret &lt; a[i] ? ret : a[i];
	sem_wait(&amp;sumMux);
	sum += ret;
	sem_post(&amp;sumMux);
}
void myMax()
{
	int ret = a[0];
	for (int i = 1; i &lt; n; ++i)
		ret = ret &gt; a[i] ? ret : a[i];
	sem_wait(&amp;sumMux);
	sum += ret;
	sem_post(&amp;sumMux);
}
void myAvg()
{
	int ret = a[0];
	for (int i = 1; i &lt; n; ++i)
		ret += a[i];
	sem_wait(&amp;sumMux);
	sum += ret / n;
	sem_post(&amp;sumMux);
}
int main()
{
	scanf("%d", &amp;n);
	a = malloc(sizeof(int) * n);
	for (int i = 0; i &lt; n; ++i)
		scanf("%d", &amp;a[i]);
	pthread_t p[3];
	sem_init(&amp;sumMux, 0, 1);
	pthread_create(&amp;p[0], NULL, myMin, NULL);
	pthread_create(&amp;p[1], NULL, myMax, NULL);
	pthread_create(&amp;p[2], NULL, myAvg, NULL);
	for (int i = 0, ret; i &lt; 3; ++i)
		pthread_join(p[i], NULL);
	free(a);
	printf("%d", sum);
}
</code></pre>
