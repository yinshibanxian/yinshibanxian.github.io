{-
5. å®šä¹‰å‡½æ•°
maxFun :: (Integer -&gt; Integer) -&gt; Integer -&gt; Integer
ä½¿å¾—maxFun f n ç­‰äºf 0 ï¼Œ f 1 ï¼Œ ... ï¼Œ f nä¸­çš„æœ€å¤§å€¼ã€‚
-}
maxFun :: (Integer -&gt; Integer) -&gt; Integer -&gt; Integer
maxFun f 0=f 0
maxFun f n=max (f n) (maxFun f n-1)

{-
6. å®šä¹‰å‡½æ•°ï¼š
fib :: Integer -&gt;Integer
ä½¿å¾—fib n è¿”å›ç¬¬nä¸ªæ–æ³¢é‚£å¥‘æ•°ï¼Œå¦‚fib 0  =0, fib 1 = 1, fib 2 = 1, fib 3 = 2, fib 4 = 5 ,...ã€‚
-}
fib :: Integer -&gt;Integer
fib n=if(n&lt;2)then n else fib (n-1)+fib(n-2)

{-
7. åˆ©ç”¨æˆ‘ä»¬å¯ä»¥åˆ©ç”¨ä¸‹åˆ—è¿­ä»£å…¬å¼æ±‚2çš„è¿‘ä¼¼å¹³æ–¹æ ¹ï¼š
